        android:icon="@drawable/logo_sin_nombre"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_sin_nombre"
        android:supportsRtl="true"
        android:theme="@style/Theme.ProyectoIntegrador"
        tools:targetApi="31">
        <activity
            android:name=".view.PerfilActivity"
            android:exported="false" />
        <activity
            android:name=".view.GruposActivity"
            android:exported="false" />
        <activity
            android:name=".view.RegistroActivity"
            android:exported="false" />
        <activity
            android:name=".view.NuevoGastoActivity"
            android:exported="false"
            android:label="@string/label_nuevo_gasto" />
        <activity
            android:name=".view.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.NuevoGrupoActivity"
            android:exported="true"
            android:label="@string/label_nuevo_grupo" />
        <activity
            android:name=".view.GrupoActivity"
            android:exported="false" />
